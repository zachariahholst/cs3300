<div class="container">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <span class="text-danger"><%= render "devise/shared/error_messages", resource: resource%></span>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <p></p>
  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class => "rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= link_to "Back", :back, :class => "rounded bg-info text-white" %>
</div>