

<div class="container-fullwidth bg-secondary ">
  <span class="text-white bg-secondary", id="notice"><%= notice %></span>
  
  <h1 class="text-white" style="margin-left:0.8em">Welcome!</h1>
  <span class="text-white" style="margin-left:2.5em">This site is for all students wishing to upload their projects for their peers</span>

  
  <p></p>
  <% if user_signed_in? %>
    <span ><%= link_to 'New Project', new_project_path, :class => "rounded bg-info text-white" %></span>
  <%end%>
  
  <p><br></p>
</div>

<h1 class="text-dark" style="margin-left:2.5em">Projects</h1>

<div class="container" >

  <div class="row ">
     <% @projects.each do |project| %>
      <div class="col-md-4 bg-light" >
        <h2><%= project.title %></h2>
        <p><%= project.description %> </p>
        <td class="text-center">
        <span><%= link_to 'Show', project, :class => "rounded bg-info text-white" %></span>
        <% if user_signed_in? %>
         <span> <%= link_to 'Edit', edit_project_path(project), :class => "rounded bg-success text-white" %></span>
         <span><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "rounded bg-danger text-white" %></span> 
        <% end %>
      </td>
      </div>
     <%end%>
  </div>
</div>

<p><br><br><br></p>
<span>Site created by: Zach Holst</span>